{% extends "layout.njk" %}

{% block head %}{% endblock %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background:url(https://source.unsplash.com/collection/332741/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Nome Completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.degree}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span>{{"Presencial" if teacher.class_type == Presencial else "À distância" }}</span>
                </div>
            </div>

            <div class="item">
                <div>Disciplinas</div>
                <div>
                {% for subject in teacher.subjects%}
                <span>{{subject}}</span>
                {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a class="button" href="/teachers/{{teacher.id}}/edit">Editar</a>
        </section>
    </div>
{% endblock %}