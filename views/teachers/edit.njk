{% extends "layout.njk" %}

{% block head %}{% endblock %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background:url(https://source.unsplash.com/collection/332741/500x500) no-repeat center center / cover"></section>
       
        <section class="details">
            <h3>Editar professor</h3>
            
            <form method="POST" action="/teachers?_method=PUT">
                {% include "teachers/fields.njk" %}
                <input type="hidden" name="id" value="{{teacher.id}}">
            </form>

            <form method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button id="delete-button" type="submit">Deletar</button>
            </form>
        </section>
    </div>
{% endblock %}